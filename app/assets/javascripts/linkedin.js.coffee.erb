jQuery ->

  $('.linkedin').click (e) ->
    e.preventDefault()
    window.location = '/auth/linkedin/'
  $('.github').click (e) ->
    e.preventDefault()
    window.location = '/auth/github/'
  $('.all').click (e) ->
    e.preventDefault()
    FB.login ((response) ->
      window.location = "/auth/facebook/callback?e=all" if response.authResponse
    ),
      scope: "email,user_likes"
