jQuery ->

  $('.linkedin').click (e) ->
    e.preventDefault()
    window.location = '/auth/linkedin/'
  $('.github').click (e) ->
    e.preventDefault()
    window.location = '/auth/github/'
  $('.all').click (e) ->
    e.preventDefault()
    FB.login ((response) ->
      window.location = "/auth/facebook/callback?e=all" if response.authResponse
    ),
      scope: "basic_info,email,user_likes,user_about_me,user_birthday,
              user_education_history,user_events,user_groups,
              user_interests,friends_about_me"
